{
  "compilerOptions": {
    "outDir": "dst",
    "allowJs": false,
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "newLine": "lf"
  },
  "include": [
      "./src/**/*"
  ]
}
